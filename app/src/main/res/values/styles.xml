<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <style name="Button" parent="Widget.AppCompat.Button.Colored">
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="radioNight" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:background">@color/radioNight</item>
        <item name="android:paddingBottom">18dp</item>
        <item name="android:paddingTop">18dp</item>
    </style>
    <style name="radioDay" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:background">@color/radioDay</item>
        <item name="android:paddingBottom">18dp</item>
        <item name="android:paddingTop">18dp</item>
    </style>
    <style name="WindowAnimationTransition">
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>
